<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.calendar.controller.LoginController"
      alignment="CENTER" spacing="20" styleClass="login-container">
    
    <padding>
        <Insets top="50" right="40" bottom="50" left="40"/>
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <Label text="QUẢN LÝ LỊCH" styleClass="app-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Label text="Đăng nhập vào tài khoản" styleClass="subtitle">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </VBox>

    <VBox spacing="15" styleClass="form-container" alignment="CENTER">
        <VBox spacing="5">
            <Label text="Tên đăng nhập" styleClass="field-label"/>
            <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" 
                      styleClass="input-field" />
        </VBox>

        <VBox spacing="5">
            <Label text="Mật khẩu" styleClass="field-label"/>
            <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" 
                          styleClass="input-field" />
        </VBox>

        <Label fx:id="messageLabel" styleClass="message-label" visible="false" wrapText="true"/>

        <Button fx:id="loginButton" text="Đăng nhập" onAction="#handleLogin" 
                styleClass="primary-button" >
            <font>
                <Font name="System Bold" size="14"/>
            </font>
        </Button>
    </VBox>

    <HBox alignment="CENTER" spacing="5">
        <Label text="Chưa có tài khoản?" styleClass="link-text"/>
        <Hyperlink fx:id="registerLink" text="Đăng ký ngay" 
                  onAction="#handleRegister" styleClass="link"/>
    </HBox>

</VBox>